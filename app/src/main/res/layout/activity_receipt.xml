<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".receipt">

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/mblno"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="100dp"
      android:layout_marginEnd="15dp"
      android:hint="Mobile number"
      android:padding="5dp"
      android:textColorHint="@color/white"
      app:hintTextColor="@color/white"
      >

  <com.google.android.material.textfield.TextInputEditText
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/mblnoData"
      android:ems="10"
      android:importantForAutofill="no"
      android:inputType="phone"
      android:textColor="@color/white"
      android:textColorHint="@color/white"
      android:textSize="14sp"

      />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/owname"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="15dp"
      android:hint="Add vehicle owner name"
      android:layout_below="@+id/mblno"
      android:padding="5dp"
      android:textColorHint="@color/white"
      app:hintTextColor="@color/white">

  <com.google.android.material.textfield.TextInputEditText
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/ownameData"
      android:ems="10"
      android:importantForAutofill="no"
      android:inputType="textPersonName"
      android:textColor="@color/white"
      android:textColorHint="@color/white"
      android:textSize="14sp"

      />
</com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/vehno"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="15dp"
      android:hint="Add vehicle number"
      android:layout_below="@id/owname"
      android:padding="5dp"
      android:textColorHint="@color/white"
      app:hintTextColor="@color/white">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vehnoData"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textCapCharacters"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        />
  </com.google.android.material.textfield.TextInputLayout>


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:text="Select vehicle type:-"
    android:layout_below="@id/vehno"
    android:textColor="@color/white"
    android:layout_marginTop="20dp"
      android:layout_marginLeft="50dp"
      android:id="@+id/vehtype"
    />

  <RadioGroup
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/vehtype"
      android:orientation="horizontal"
      android:id="@+id/radio"
      android:layout_centerHorizontal="true">
       <RadioButton
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
         android:id="@+id/radiobike"
         android:text="Bike"
         android:textColor="@color/white"
           android:paddingHorizontal="20dp"

           />

  <RadioButton
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/radiocar"
      android:text="Car"
      android:textColor="@color/white"
      android:paddingHorizontal="20dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/radio0"
        android:text="Others"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        />


</RadioGroup>


  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:text="Print Receipt"
      android:textAllCaps="false"
      android:textColor="@color/black"
      android:textStyle="bold"
      android:layout_below="@id/radio"
      android:id="@+id/print"
      android:background="@drawable/buttonback"
      android:layout_marginTop="20dp"
      />


